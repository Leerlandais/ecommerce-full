{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="shortcut icon" href="../favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="{{ PUB_DIR }}styles/style.css">
    <link rel="stylesheet" href="{{ PUB_DIR }}styles/main.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet">
{% endblock %}

{% block title %}Ecommerce Administration{% endblock %}

{% block header %}

    <header class="py-4 shadow-sm bg-white">
        <div class="container flex items-center justify-between">
            <a href="?route=home">
                <img src="../public/images/logo.svg" alt="Logo" class="w-32">
            </a>

            <div class="w-full max-w-xl relative flex">
                <span class="absolute left-4 top-3 text-lg text-gray-400">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </span>
                <input type="text" name="search" id="search"
                       class="w-full border border-primary border-r-0 pl-12 py-3 pr-3 rounded-l-md focus:outline-none hidden md:flex"
                       placeholder="search">
                <button
                        class="bg-primary border border-primary text-white px-8 rounded-r-md hover:bg-transparent hover:text-primary transition hidden md:flex isDisabled">Search</button>
            </div>

            <div class="flex items-center space-x-4">
                <a href="#" class="text-center text-gray-700 hover:text-primary transition relative">
                    <div class="text-2xl">
                        <i class="fa-solid fa-bag-shopping"></i>
                    </div>
                    <div class="text-xs leading-3"><button onclick="toggleLogs()">Adjust Tests</button> : <span id="currentLogSetting"></span></div>

                </a>
                <a href="#" class="text-center text-gray-700 hover:text-primary transition relative">
                    <div class="text-2xl">
                        <i class="fa-regular fa-user"></i>
                    </div>
                    <div class="text-xs leading-3"><button onclick="createNewStorage()">Reset Local Storage</button></div>
                </a>
            </div>
        </div>
    </header>

{% endblock %}

{% block navbar %}

    {% include('_menu.html.twig') %}
    <h4 class="text-2xl text-red-600 text-center">{{ errorMessage }}</h4>
{% endblock %}




{% block main %}

        <div class="bg-cover bg-no-repeat bg-center py-36" style="background-image: url('{{ PUB_DIR }}images/banner-bg.jpg')">
            <div class="container">
                <h1 class="text-6xl text-gray-800 font-medium mb-4 capitalize">
                    What would you like to do today?
                </h1>

                <div class="col-span-2 grid grid-cols-4 gap-2 mt-4">
                    <div class="grid grid-cols-2 gap-2">
                        <div>
                            <a href="?route=article&action=add">
                                <h3 class="bg-primary border border-primary text-white text-center
                                                py-3 font-medium rounded-md hover:bg-transparent hover:text-primary">
                                    Add Articles
                                </h3>
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <h3 class="bg-primary border border-primary text-white text-center
                                                py-3 font-medium rounded-md hover:bg-transparent hover:text-primary">
                                    Support
                                </h3>
                            </a>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-2">
                        <div>
                            <a href="">
                                <h3 class="bg-primary border border-primary text-white text-center
                                                py-3 font-medium rounded-md hover:bg-transparent hover:text-primary">
                                    Contact
                                </h3>
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <h3 class="bg-primary border border-primary text-white text-center
                                                py-3 font-medium rounded-md hover:bg-transparent hover:text-primary">
                                    About
                                </h3>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

{% endblock %}


{% block copyright %}

    <div class="bg-gray-800 py-4">
        <div class="container flex items-center justify-between">
            <p class="text-white"><a href="https://leerlandais.com" target="_blank">&copy; Leerlandais </a>{{ 'now' | date('Y') }}</p>
            <div>
                <img src="../public/images/methods.png" alt="methods" class="h-5">
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="../public/scripts/consoleLogger.js"></script>
    <script src="../public/scripts/jsonHandler.js"></script>
    <script src="../public/scripts/storageHandler.js"></script>
    <script src="../public/scripts/elementBuilder.js"></script>
    <script src="../public/scripts/basketHandler.js"></script>
{% endblock %}

