{% extends 'private/private.index.html.twig' %}

{% block main %}
{{ parent() }}
    <h3 class="text-center text-3xl">Edit Categories</h3>
    <div class="flex items-center justify-center">
        <div class="overflow-x-auto">
            <h3 class="text-3xl"></h3>
            <table class="min-w-full bg-white shadow-md rounded-xl">
                <thead>
                <tr class="bg-blue-gray-100 text-center text-gray-700">
                    <th class="py-3 px-4">Name</th>
                    <th class="py-3 px-4">Description</th>
                    <th class="py-3 px-4">Update</th>
                </tr>
                </thead>
                <tbody class="text-blue-gray-900 text-center">
                {% for cat in categories %}
                    <tr class="border-b border-blue-gray-200">
                        <td class="py-3 px-4">{{ cat.getCatsName }}</td>
                        <td class="py-3 px-4">{{ cat.getCatsDesc | raw }}</td>
                        <td class="py-3 px-4">
                            <a href="#" class="font-medium text-blue-600 hover:text-blue-800">Update</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}